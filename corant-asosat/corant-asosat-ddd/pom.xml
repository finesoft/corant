				<exclusion>
					<groupId>org.jboss</groupId>
					<artifactId>jboss-transaction-spi</artifactId>
				</exclusion>
			</exclusions>
			<optional>false</optional>
		</dependency>
		<dependency>
			<groupId>org.corant</groupId>
			<artifactId>corant-suites-jpa-hibernate</artifactId>
		</dependency>

